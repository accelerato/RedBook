<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#3D3D3D" />
            <stroke
                android:width="1dp"
                android:color="#575757" />
            <corners
                android:radius="5dp" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#575757"
                android:endColor="#3D3D3D"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
</selector>